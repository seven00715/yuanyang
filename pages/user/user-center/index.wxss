/**index.wxss**/

.info-waper {
  background: var(--white);
  margin-top: 30rpx;
  padding-left: 36rpx;
  padding-right: 24rpx;
  font-weight: 500;
  font-size: 30rpx;
  color: #000;
}

.avatar-wraper {
  border-bottom: 0.5rpx solid #eee;
}

.row-wraper {
  padding: 0;
}

.avatar-wraper .cu-avatar {
  margin: 24rpx 0rpx;
  width: 140rpx;
  height: 140rpx;
  vertical-align: middle;
}

.cuIcon-right::before {
  color: #c6c6c6;
  margin-left: 8rpx;
  font-size: 30rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 昵称 */

.info-name {
  padding: 33rpx 0;
}

.info-right {
  font-size: 27rpx;
  color: #c6c6c6;
}

/* 我参与的活动 */

.my-active-top {
  padding: 30rpx 26rpx;
  border-bottom: 0.5 solid #c6c6c6;
  margin-bottom: 33px;
}

.active-list-item {
  display: flex;
  background-color: var(--white);
  margin: 23rpx 34rpx;
  padding: 17rpx 22rpx 20rpx 21rpx;
  border-radius: 20rpx;
}

.active-img {
  width: 142rpx;
  height: 142rpx;
  background: #969;
  margin-right: 28rpx;
}
.active-right{
  width: 483rpx;
}
.active-right-top {
  font-size: 27rpx;
  color: #343434;
  height: 70rpx;
  border-bottom: 0.5rpx solid #f5f5f6;
}

.active-right-bottom {
  width: 100%;
  height: 76rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #a8a8a8;
}
.active-more {
  color: #6a90df;
}
.active-more .cuIcon-right::before {
  color: #6a90df;
  vertical-align: middle;
  font-size: 22rpx;
}

/* 身份验证 */
.auth {
  padding: 33rpx 26rpx;
}