<view class="page-body">
  <view class="title">请填写活动信息,参与活动</view>
  <form catchsubmit="formSubmit" catchreset="formReset" class="active-from">
    <view class="page-section" wx:for="{{activitycolumn1}}" wx:key="index">
      <text class="weui-cells__title">{{item.label}}：</text>
      <input class="weui-input" name="{{item.prop}}" auto-focus bindblur="bindInput" data-index="{{index}}" />
    </view>

    <!-- 提交 -->
    <view class="btn-area">
      <button style="margin: 30rpx" type="primary" formType="submit">信息确认已无误,请提交</button>
      <button style="margin: 30rpx" formType="reset">Reset</button>
    </view>
  </form>
</view>